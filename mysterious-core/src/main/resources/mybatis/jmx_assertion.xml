<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lihuia.mysterious.core.mapper.jmx.sample.assertion.AssertionMapper">
    <resultMap id="AssertionResult" type="com.lihuia.mysterious.core.entity.jmx.sample.assertion.AssertionDO">
        <result property="id" column="id"/>
        <result property="testCaseId" column="test_case_id"/>
        <result property="jmxId" column="jmx_id"/>
        <result property="responseCode" column="response_code"/>
        <result property="responseMessage" column="response_message"/>
        <result property="jsonPath" column="json_path"/>
        <result property="expectedValue" column="expected_value"/>
        <result property="creatorId" column="creator_id"/>
        <result property="creator" column="creator"/>
        <result property="modifierId" column="modifier_id"/>
        <result property="modifier" column="modifier"/>
        <result property="createTime" column="create_time"/>
        <result property="modifyTime" column="modify_time"/>
    </resultMap>

    <sql id="table_name">
        mysterious_jmx_assertion
    </sql>
    
    <sql id="select-column-list">
        `id`,
        `test_case_id`,
        `jmx_id`,
        `response_code`,
        `response_message`,
        `json_path`,
        `expected_value`,
        `creator_id`,
        `creator`,
        `modifier_id`,
        `modifier`,
        `create_time`,
        `modify_time`
    </sql>
    
    <sql id="set">
        <if test="id != null">id=#{id},</if>
        <if test="testCaseId != null">test_case_id=#{testCaseId},</if>
        <if test="jmxId != null">jmx_id=#{jmxId},</if>
        <if test="responseCode != null">response_code=#{responseCode},</if>
        <if test="responseMessage != null">response_message=#{responseMessage},</if>
        <if test="jsonPath != null">json_path=#{jsonPath},</if>
        <if test="expectedValue != null">expected_value=#{expectedValue},</if>
        <if test="creatorId != null">creator_id=#{creatorId},</if>
        <if test="creator != null">creator=#{creator},</if>
        <if test="modifierId != null">modifier_id=#{modifierId},</if>
        <if test="modifier != null">modifier=#{modifier},</if>
        <if test="createTime != null">create_time=#{createTime},</if>
        <if test="modifyTime != null">modify_time=#{modifyTime},</if>
    </sql>
    
    <insert id="add" parameterType="com.lihuia.mysterious.core.entity.jmx.sample.assertion.AssertionDO">
        INSERT
        <include refid="table_name"/>
        <set>
            <include refid="set"></include>
        </set>
    </insert>

    <select id="getByJmxId" resultMap="AssertionResult">
        SELECT
        <include refid="select-column-list"/>
        FROM
        <include refid="table_name"/>
        WHERE 1=1
        <if test="jmxId != null">and jmx_id=#{jmxId}</if>
    </select>

    <update id="update" parameterType="com.lihuia.mysterious.core.entity.jmx.sample.assertion.AssertionDO">
        UPDATE
        <include refid="table_name"/>
        <set>
            <include refid="set"></include>
        </set>
        WHERE 1=1
        <if test="id != null">and id=#{id}</if>
    </update>

    <delete id="delete">
        DELETE FROM
        <include refid="table_name"/>
        WHERE 1=1
        <if test="id != null">and id=#{id}</if>
    </delete>

    <delete id="deleteByJmxId">
        DELETE FROM
        <include refid="table_name"/>
        WHERE 1=1
        <if test="jmxId != null">and jmx_id=#{jmxId}</if>
    </delete>
</mapper>
